<table width='200'>
  <tr>
    <th>
      Gravatar
    </th>
    <th>
      Person
    </th>
    <th>
      Last Measure
    </th>
    <th>
      Last Weight
    </th>
    <th>
      Karma score
    </th>
  </tr>
  <% @people.each do |person|%>
    <tr>
      <td>
        <%= image_tag(person.gravatar_url) %><br/>
      </td>
      <td>
        <%= link_to person.name!, person %>
        <% if person.private %>
          <br>
          <%= image_tag("lock-icon-small.png") %>
          </br>
          <td>
          </td>
          <td>
          </td>
          <td>
          </td>
          <td>
          </td>
        <% else %>
        </td>
        <td>
          <%= person.current_measure.measure_date.to_s(:short) if person.current_measure %>
        </td>
        <td>
          <%= Utility.floatformat % person.current_measure.weight if person.current_measure %>
        </td>
        <td>
          <strong>
            <%= link_to(person.karma_grade(person.current_measure), :controller=>"people", :action=>"dashboard", :id=>person.id) if person.current_measure %>
          </strong>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
