<table width='200'>
  <% @people.each do |person|%>
    <tr>
      <th>
        Person
      </th>
      <th>
        Last Measure
      </th>
      <th>
        Last Weight
      </th>
      <th>
        Karma score
      </th>

    <tr>
      <td>
        <%= image_tag person.gravatar_url %><br/>
      </td>
      <td>
        <%= link_to person.username, :controller=>"measures", :action=>"index", :person_id=>person.id %> 
        <% if person.private %>
          <br>
          <%= image_tag("lock-icon-small.png") %>
          </br>
        <% end %>
      </td>
      <td>
        <%= person.current_measure.measure_date.to_s(:short) if person.current_measure %>
      </td>
      <td>
        <%= person.current_measure.weight if person.current_measure %>
      </td>
      <td>
        <strong>
          <%= person.karma_grade person.current_measure if person.current_measure %>
        </strong>
      </td>
    </tr>
  <% end %>
</table>
