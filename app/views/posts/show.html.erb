<h1>
  <%= @post.name %>
  <small>
    <br>
    <%= @post.person.username %> - <%= @post.created_at.to_s(:long) %>
    </br>
  </small>
</h2>

<%= raw RDiscount.new(@post.body).to_html %>

<p>
  <%= link_to "Edit", edit_post_path(@post) %> |
  <%= link_to "Delete", @post, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", posts_path %>
</p>
