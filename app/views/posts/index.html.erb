<% title "Posts" %>

<table>
  <tr>
    <th>Name</th>
    <th>Body</th>
    <th>Person</th>
  </tr>
  <% for post in @posts %>
    <tr>
      <td><%= post.name %></td>
      <td><%= post.body %></td>
      <td><%= post.person_id %></td>
      <td><%= link_to "Show", post %></td>
      <td><%= link_to "Edit", edit_post_path(post) %></td>
      <td><%= link_to "Destroy", post, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Post", new_post_path %></p>
