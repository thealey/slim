<%= form_for @post do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label "Title" %><br />
    <%= f.text_field :name, :size => 80 %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <% f.select :person_id,Person.order('username').collect{|p| [p.username, p.id]} %>
    <%= f.hidden_field :person_id, :value=>current_person.id %>
  </p>
  <p><%= f.submit %></p>
<% end %>
